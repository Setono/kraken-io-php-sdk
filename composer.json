{
    "name": "setono/kraken-io-php-sdk",
    "type": "library",
    "description": "A PHP SDK for the kraken.io API",
    "license": "MIT",
    "authors": [
        {
            "name": "Joachim LÃ¸vgaard",
            "email": "joachim@loevgaard.dk"
        }
    ],
    "require": {
        "php": "^7.2",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "thecodingmachine/safe": "^1.0",
        "webimpress/safe-writer": "^2.0",
        "webmozart/assert": "^1.7"
    },
    "require-dev": {
        "ext-json": "*",
        "kriswallsmith/buzz": "^1.0",
        "nyholm/psr7": "^1.2",
        "phpunit/phpunit": "^8.5",
        "setono/code-quality-pack": "^1.4"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\Kraken\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Setono\\Kraken\\": "tests/"
        }
    },
    "prefer-stable": true,
    "scripts": {
        "analyse": "phpstan analyse -c phpstan.neon",
        "check-style": "ecs check --ansi src/ tests/",
        "fix-style": "ecs check --fix --ansi src/ tests/",
        "phpunit": "phpunit",
        "test": [
            "@phpunit"
        ]
    }
}
